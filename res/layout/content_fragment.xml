<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <com.zengjin.view.NoScrollViewPager
        android:id="@+id/vp_content_fragment"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <RadioGroup
        android:id="@+id/rg_content_fragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bottom_tab_bg"
        android:orientation="horizontal" >

        <RadioButton
            android:id="@+id/rb_content_fragment_home"
            style="@style/main_tab_style"
            android:drawableTop="@drawable/tab_home_bg"
            android:text="首页" />

        <RadioButton
                android:id="@+id/rb_content_fragment_newscenter"
            style="@style/main_tab_style"
            android:drawableTop="@drawable/tab_newscennter_bg"
            android:text="新闻中心" />

        <RadioButton
                android:id="@+id/rb_content_fragment_smartservice"
            style="@style/main_tab_style"
            android:drawableTop="@drawable/tab_smartservice_bg"
            android:text="智慧服务" />

        <RadioButton
                android:id="@+id/rb_content_fragment_govaffairs"
            style="@style/main_tab_style"
            android:drawableTop="@drawable/tab_govaffairs_bg"
            android:text="政务" />

        <RadioButton
                android:id="@+id/rb_content_fragment_settings"
            style="@style/main_tab_style"
            android:drawableTop="@drawable/tab_settings_bg"
            android:text="设置" />
    </RadioGroup>

</LinearLayout>